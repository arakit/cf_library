<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    
    
    <style name="FileGridItemStyle.TextView.Large" parent="@android:style/Widget.TextView">
		<item name="android:background">#00000000</item>
    	<item name="android:textColor">#ffffffff</item>
    	<item name="android:textAppearance">@android:style/TextAppearance.Large</item> 
    </style>
    <style name="FileGridItemStyle.TextView.Medium" parent="@android:style/Widget.TextView">
		<item name="android:background">#00000000</item>
    	<item name="android:textColor">#fff0f0f0</item>
    	<item name="android:textAppearance">@android:style/TextAppearance.Medium</item> 
    </style>    
    <style name="FileGridItemStyle.TextView.Small" parent="@android:style/Widget.TextView">
		<item name="android:background">#00000000</item>
    	<item name="android:textColor">#ffe0e0e0</item>
    	<item name="android:textAppearance">@android:style/TextAppearance.Small</item>
    </style>    

</resources>